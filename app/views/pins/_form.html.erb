<%= simple_form_for(@pin) do |f| %>
  <% if @pin.errors.any? %>
  <div id="errors">
    <h2>
      <%= pluralize(@pin.errors.count, "error") %> prevented this Pin from being saved!
    </h2>
    <ul>
      <% @pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="form-group">
    <p>
      <%= f.input :image, input_html: { class: "form-control" } %><br>
      <%= f.input :title, input_html: { class: "form-control" } %><br>
      <%= f.input :description, input_html: { class: "form-control" } %>
    </p>
  </div>

    <p><%= f.button :submit, class: "btn btn-primary" %>
       <% if request.path.include?('edit')  %>
         <%= link_to "Cancel Edit", pin_path, class: "btn btn-primary" %>
       <% end %></p>
  
<% end %>  